@layout("/common/_container.html",{js:["/modules/user/add.js"]}){
<form class="layui-form" lay-filter="form">
	<div class="layer-contain">
		<div class="sheet-title">
			<span>基本信息</span>
		</div>
		<div class="sheet-item clearfix">
			<div class="layui-div-form clearfix">
				<input type="hidden" name="id" id="id">

				<div class="layui-form-item layui-col-xs12 layui-col-md12">
					<label class="layui-form-label"><span
						class="mandatory-mark"></span>用户名：</label>
					<div class="layui-input-block layui-input-textarea">
						<input type="text" class="layui-input name" lay-verify="required"
							placeholder="请输入用户名" name="account">
					</div>
				</div>
				<div
					class="layui-form-item layui-col-xs12 layui-col-md12 layui-form-item3">
					<label class="layui-form-label">账号密码：</label>
					<div class="layui-input-block layui-input-textarea">
						<input type="text" class="layui-input name" lay-verify="required"
							placeholder="请输入密码" name="password">
					</div>
				</div>
				
				<div
					class="layui-form-item layui-col-xs12 layui-col-md12 layui-form-item3">
					<label class="layui-form-label">测试下拉框（角色）：</label>
					<div class="layui-input-block layui-input-textarea">
						<select lay-search name="roleId" lay-verify="required">
							<option value="">请选择</option>
						@for(obj in dict.listByEntity("role")){
							<option value="${obj.fldkey}">${obj.value}</option>
						@}
				    </select>
					</div>
				</div>
			</div>
			
		</div>
	</div>
	<div class="btns-footer form-operate-btns">
		<button class="layui-btn layui-btn-sm basic-btn"
			lay-submit="addUser" lay-filter="addUser">确认</button>
		<button class="layui-btn layui-btn-sm basic-btn layui-btn-primary"
			type="reset">重置</button>
		<button class="layui-btn layui-btn-sm basic-btn layui-btn-primary"
			type="reset" id="close">关闭</button>
	</div>
</form>
<script type="text/javascript">
	var Entity = {
		tag : "user",
		name : "用户",
	}
	var user = $
	{
		user
	};
</script>
@}
