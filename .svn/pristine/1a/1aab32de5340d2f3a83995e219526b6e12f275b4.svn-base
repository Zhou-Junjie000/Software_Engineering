@layout("/common/_container.html",{js:["/modules/card/add.js"]}){
<form class="layui-form" lay-filter="form">
	<div class="layer-contain">
		<div class="sheet-title">
			<span>基本信息</span>
		</div>
		<div class="sheet-item clearfix">
			<div class="layui-div-form clearfix" style="width:82%;">
				<input type="hidden" name="id" id="id">
				
				<div class="layui-form-item layui-col-xs6 layui-col-md6">
					<label class="layui-form-label"><span
						class="mandatory-mark"></span>客户姓名：</label>
					<div class="layui-input-block layui-input-textarea">
						<input type="text" class="layui-input name" lay-verify="required"
							placeholder="请输入客户姓名" name="name">
					</div>
				</div>
				<div class="layui-form-item layui-col-xs6 layui-col-md6">
					<label class="layui-form-label">身份证号码：</label>
					<div class="layui-input-block layui-input-textarea">
						<input type="text" class="layui-input name" 
							placeholder="请输入身份证号码" name="card">
					</div>
				</div>
				<div class="layui-form-item layui-col-xs6 layui-col-md6" id="phone_div">
					<label class="layui-form-label"><span
						class="mandatory-mark"></span>手机号码：</label>
					<div class="layui-input-block layui-input-textarea">
						<input type="text" class="layui-input name" lay-verify="required"
							placeholder="请输入手机号码" name="phone" id="phone">
					</div>
				</div>
				<div class="layui-form-item layui-col-xs6 layui-col-md6">
					<label class="layui-form-label"><span
						class="mandatory-mark"></span>意向度：</label>
					<div class="layui-input-block layui-input-textarea">
						<select name="level" lay-filter="chargeman" lay-verify="required"  lay-search>
							<option value="">请选择意向度</option>
							@for(obj in dict.listBySql("select fldkey ,value from t_dict_data where dict_type = 'level'  order by ordernum")){
							<option value="${obj.fldkey}">${obj.value}</option>
							@}
			   			</select>
					</div>
				</div>
				<div class="layui-form-item layui-col-xs12 layui-col-md12" id="area-picker">
					<label class="layui-form-label">省/市/区：</label>
					<div class="layui-input-block layui-input-textarea">
						<div class="layui-input-inline" style="width: calc(33% - 4px);">
			                <select name="province" class="province-selector" data-value="江苏省" lay-filter="province-1" lay-search>
			                    <option value="">请选择省</option>
			                </select>
			            </div>
			            <div class="layui-input-inline" style="width: calc(33% - 4px);">
			                <select name="city" class="city-selector" data-value="南京市" lay-filter="city-1" lay-search>
			                    <option value="">请选择市</option>
			                </select>
			            </div>
			            <div class="layui-input-inline" style="width: calc(33% - 4px);margin-right: 0;">
			                <select name="county" class="county-selector" data-value="玄武区" lay-filter="county-1" lay-search>
			                    <option value="">请选择区</option>
			                </select>
			            </div>
					</div>
				</div>
				<div class="layui-form-item layui-col-xs12 layui-col-md12">
					<label class="layui-form-label">详细地址：</label>
					<div class="layui-input-block layui-input-textarea">
						<input type="text" class="layui-input name" 
							placeholder="请输入详细地址" name="home">
					</div>
				</div>
				
				<div class="layui-form-item layui-col-xs6 layui-col-md6">
					<label class="layui-form-label">来源：</label>
					<div class="layui-input-block layui-input-textarea">
						<select name="source" lay-filter="chargeman"  lay-search>
							<option value="">请选择来源</option>
							@for(obj in dict.listBySql("select fldkey ,value from t_dict_data where dict_type = 'source'  order by ordernum")){
							<option value="${obj.fldkey}">${obj.value}</option>
							@}
			   			</select>
					</div>
				</div>
				<div class="layui-form-item  layui-col-xs12 layui-col-md12">
					<label class="layui-form-label">其他：</label>
					<div class="layui-input-block layui-input-textarea"  >
						<textarea class="layui-textarea" id="remark" name="remark" value=""></textarea>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="btns-footer form-operate-btns">
		<button class="layui-btn layui-btn-sm basic-btn"
			lay-submit="addNotice" lay-filter="addEntity">确认</button>
		<button class="layui-btn layui-btn-sm basic-btn layui-btn-primary"
			type="reset">重置</button>
		<button class="layui-btn layui-btn-sm basic-btn layui-btn-primary"
			type="reset" id="close">关闭</button>
	</div>
</form>
<script type="text/javascript">
	var Entity = {
		tag : "card",
		name : "会员卡",
	}
	//页面常量
	var PAGE_CONSTANT = {
		id:'${id}',
		roleId:'${roleId}'
	};
</script>
@}
