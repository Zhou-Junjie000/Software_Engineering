@layout("/common/_container.html",{js:["/modules/card/add.js"]}){
<form class="layui-form" lay-filter="form">
	<div class="layer-contain">
		<div class="sheet-title">
			<span>基本信息</span>
		</div>
		<div class="sheet-item clearfix">
			<div class="layui-div-form clearfix" style="width:82%;">
				<input type="hidden" name="id" id="id">
				
				<div class="layui-form-item layui-col-xs6 layui-col-md6">
					<label class="layui-form-label"><span
						class="mandatory-mark"></span>客户姓名：</label>
					<div class="layui-input-block layui-input-textarea">
						<select name="userid" lay-filter="chargeman" lay-verify="required"  lay-search>
							<option value="">请选择客户姓名</option>
							@for(obj in dict.listBySql("select id fldkey ,name value from t_user where id in(select user_id from t_user_role where role_id= '2')  order by account")){
							<option value="${obj.fldkey}">${obj.value}</option>
							@}
			   			</select>
					</div>
				</div>
				<div class="layui-form-item layui-col-xs6 layui-col-md6">
					<label class="layui-form-label">会员卡类型：</label>
					<div class="layui-input-block layui-input-textarea" >
						<input lay-filter="source" name="type" type="radio" title="年卡" value="年卡" checked/>
						<input lay-filter="source" name="type" type="radio" title="季卡" value="季卡"/>
						<input lay-filter="source" name="type" type="radio" title="月卡" value="月卡"/>
					</div>
				</div>
				<div class="layui-form-item layui-col-xs6 layui-col-md6" id="phone_div">
					<label class="layui-form-label"><span
						class="mandatory-mark"></span>开始日期：</label>
					<div class="layui-input-block layui-input-textarea">
						<input type="text" class="layui-input date-input"  name="startdate" placeholder="请选择开始日期" value="" />
					</div>
				</div>
				<div class="layui-form-item layui-col-xs6 layui-col-md6">
					<label class="layui-form-label"><span
						class="mandatory-mark"></span>结束日期：</label>
					<div class="layui-input-block layui-input-textarea">
						<input type="text" class="layui-input date-input"  name="enddate" placeholder="请选择结束日期" value="" />
					</div>
				</div>
				<div class="layui-form-item  layui-col-xs12 layui-col-md12">
					<label class="layui-form-label">备注：</label>
					<div class="layui-input-block layui-input-textarea"  >
						<textarea class="layui-textarea" id="remark" name="remark" value=""></textarea>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="btns-footer form-operate-btns">
		<button class="layui-btn layui-btn-sm basic-btn"
			lay-submit="addNotice" lay-filter="addEntity">确认</button>
		<button class="layui-btn layui-btn-sm basic-btn layui-btn-primary"
			type="reset">重置</button>
		<button class="layui-btn layui-btn-sm basic-btn layui-btn-primary"
			type="reset" id="close">关闭</button>
	</div>
</form>
<script type="text/javascript">
	var Entity = {
		tag : "card",
		name : "会员卡",
	}
	//页面常量
	var PAGE_CONSTANT = {
		id:'${id}',
		roleId:'${roleId}'
	};
</script>
@}
